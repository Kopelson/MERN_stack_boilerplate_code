{
  "name": "mern_stack_boilerplate_code",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "proxy": {
    "/api": {
      "target": "http://localhost:3001",
      "secure": false
    }
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kopelson/MERN_stack_boilerplate_code.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kopelson/MERN_stack_boilerplate_code/issues"
  },
  "homepage": "https://github.com/Kopelson/MERN_stack_boilerplate_code#readme",
  "dependencies": {
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "nodemon": "^1.18.7",
    "pg": "^8.7.1"
  }
}
